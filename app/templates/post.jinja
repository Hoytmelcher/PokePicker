{% extends "base.jinja" %}


{% block content %}
    <h2>Create Post</h2>
    <form action="" method="post">
            {{ form.hidden_tag() }}
        <p>
            {{ form.title.label }}<br>
            {{ form.title(size=18) }}
        </p> 
        <p>
            {{ form.body.label }}<br>
            {{ form.body(size=64) }}
        </p>
        <p>
            {{ form.submit(class='btn btn-primary') }}
        </p>
    </form>
{% endblock %}